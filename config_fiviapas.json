{
  "data": {
    "desc": "defines the data",
    "train_dataset": "/cluster/home/fiviapas/data/train_segmented/",
    "test_dataset": "/cluster/home/fiviapas/data/test_segmented/",
    "batch_size": 16,
    "shuffle": true,
    "train_set_percentage": 0.2
  },
  "model": {
    "desc": "defines the model",
    "num_classes": 5,
    "freeze_fairseq": true
  },
  "general": {
    "desc": "defines general information for the training run and which optimizer and loss_function are taken",
    "num_workers": 1,
    "epochs": 3,
    "optimizer": "adam",
    "loss_function": "nllLoss",
    "log_interval": 5,
    "model_save_interval": 1
  },
  "optimizers": {
    "desc": "defines usable optimizer and their needed inputs",
    "adam": {
      "lr": 0.001,
      "weight_decay": 0.0001
    }
  },
  "scheduler": {
    "desc": "defines params for scheduler",
    "step_size": 20,
    "gamma": 0.1
  }
}
